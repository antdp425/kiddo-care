<h1>Sign Up</h1>
<br>

      <%if @errors%>
      <div class="alert alert-danger" role="alert">
         <h5 class="alert-heading">The following errors occurred:</h5>
         <hr>
         <%@errors.each do |error|%>
         <li><%=error%></li>
      <%end%>
      </div>
   <%end%>

<form method="POST" action="/signup">
<div class="form-group form-row">
   <label class="form-check-label">First Name:
   <input class="form-control"type="text" name="first_name"></label>
   </div>
<div class="form-group form-row">
   <label class="form-check-label">Last Name:
   <input class="form-control" type="text" name="last_name"></label>
   </div>
<div class="form-group form-row">
   <label class="form-check-label">Email:
   <input class="form-control" type="email" name="email"></label>
   </div>
<div class="form-group form-row">
   <label class="form-check-label">Username:
   <input class="form-control" type="text" name="username"></label>
   </div>
<div class="form-group form-row">
   <label class="form-check-label">Password:
   <input class="form-control" type="password" name="password"></label>
   </div>
   <div class="form-group form-row">
   <button class="btn btn-primary" type="submit">Sign Up</button>
   </div>
</form>