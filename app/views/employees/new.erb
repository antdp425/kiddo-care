<h1>Add Employee</h1>
      <%if @errors %>
      <div class="alert alert-danger" role="alert">
         <h5 class="alert-heading">The following errors occurred:</h5>
         <hr>
         <%@errors.each do |error|%>
         <li><%=error%></li>
      <%end%>
      </div>
   <%end%>

<form method="POST" action="/employees">
<div class="form-group form-row">
   <label class="form-check-label">First Name:
   <input class="form-control" type="text" name="first_name"></label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Last Name:
   <input class="form-control" type="text" name="last_name"></label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Phone:
   <input class="form-control" type="text" maxlength="10" name="phone"></label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Email:
   <input class="form-control" type="email" name="email"></label>
   </div>
   <div class="form-group form-row">
         <div class="form-check form-check-inline">
         <input class="form-check-input" type="checkbox" id="background_check" name="background_check" value="true">
         <label class="form-check-label" for="background_check">Background Check</label>
      </div>
               <div class="form-check form-check-inline">
         <input class="form-check-input" type="checkbox" id="cpr_certified" name="cpr_certified" value="true">
         <label class="form-check-label" for="cpr_certified">CPR Certified</label>
      </div>
   </div>
      <div class="form-group form-row">
   <button class="btn btn-primary" type="submit">Submit</button>
   </div>
</form>