<%@children.each do |child|%>
<div class="row index-row">
   <div class="col-3 align-self-center">
      <a href="/children/<%=child.id%>">
      <%="#{child.last_name.capitalize}, #{child.first_name.capitalize}"%>
      </a> 
   </div> 
   <div class="col align-self-center manage-buttons">
      <form method="GET" action="/children/<%=child.id%>/edit">
         <input type="submit" value="Edit" class="btn btn-success">
      </form>

      <form method="POST" action="/children/<%=child.id%>">
         <input type="hidden" name="_method" value="delete">
         <input type="submit" value="Delete" class="btn btn-danger">
      </form>
   <br>
   </div>
</div>
<%end%>