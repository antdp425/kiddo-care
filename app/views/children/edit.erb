<h1>Edit Child</h1>
   <br>

<%if !@child.errors.empty? %>
   <div class="alert alert-danger" role="alert">
      <h5 class="alert-heading">The following errors occurred:</h5>
      <hr>
      <% @child.errors.full_messages.each do |error|%>
      <li><%=error%></li>
   <%end%>
   </div>
<%end%>

<form method="POST" action="/children/<%=@child.id%>">
<div class="form-group form-row">
   <input type="hidden" id="hidden" name="_method" value="patch">
   <label class="form-check-label">First Name:
   <input class="form-control" type="text" name="first_name" value="<%=@child.first_name%>"></label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Last Name:
   <input class="form-control" type="text" name="last_name" value="<%=@child.last_name%>"></label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Contact Phone:
      <input class="form-control" type="text" maxlength="10" name="contact_phone" value="<%=@child.contact_phone%>">
   </label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Contact Email:
      <input class="form-control" type="email" name="contact_email" value="<%=@child.contact_email%>">
   </label>
   </div>
   <div class="form-group form-row">
   <label class="form-check-label">Notes:
   <textarea class="form-control" type="text" name="notes" cols="40"><%=@child.notes%></textarea>
   </label>
   </div>
      <div class="form-group form-row">
   <button class="btn btn-primary" type="submit">Submit</button>
   </div>
</form>